{
  "compilerOptions": {
    "paths": {
      "@/*": ["./*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/app/components/blocks/navbar.tsx",
    "src/app/components/blocks/**/*.js",
    "src/app/portfolio/meme-generator/page.jsx",
    "src/app/portfolio/notes-app/page.jsx",
    "src/app/data/portfolioData.js",
    "src/app/data/resumeData.js",
    "src/app/data/timelineData.js"
  ],
  "exclude": ["node_modules"]
}
